{
  "compilerOptions": {
    "checkJs": false,
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["js/*"]
    }
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules", "dist", "backend"]
}
